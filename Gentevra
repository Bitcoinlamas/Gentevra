<div id="gentevra-size-assistant" class="p-4 bg-white rounded-2xl shadow-md"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sizeAssistant = document.getElementById('gentevra-size-assistant');
    
    sizeAssistant.innerHTML = `
        <h2 class="text-2xl font-bold mb-4">Gentevra International Size & Style Assistant</h2>
        <p class="mb-4 text-gray-600">Select your measurements and preferences to find the perfect size and receive personalized style advice.</p>
        <div class="grid gap-4 mb-4">
            <input type="text" placeholder="Height in cm" id="height" class="border p-2 rounded w-full">
            <input type="text" placeholder="Weight in kg" id="weight" class="border p-2 rounded w-full">
            <input type="text" placeholder="Bust in cm" id="bust" class="border p-2 rounded w-full">
            <input type="text" placeholder="Waist in cm" id="waist" class="border p-2 rounded w-full">
            <input type="text" placeholder="Hips in cm" id="hips" class="border p-2 rounded w-full">
            <input type="text" placeholder="Age" id="age" class="border p-2 rounded w-full">
            
            <select id="gender" class="border p-2 rounded w-full">
                <option value="">Select Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select>
            
            <select id="bodyShape" class="border p-2 rounded w-full">
                <option value="">Select Body Shape</option>
                <option value="athletic">Athletic</option>
                <option value="curvy">Curvy</option>
                <option value="petite">Petite</option>
                <option value="tall">Tall</option>
                <option value="slim">Slim</option>
                <option value="round">Round</option>
            </select>

            <select id="productType" class="border p-2 rounded w-full">
                <option value="">Select Product Type</option>
                <option value="shirt">Shirt</option>
                <option value="pants">Pants</option>
                <option value="dress">Dress</option>
                <option value="coat">Coat</option>
                <option value="shoes">Shoes</option>
                <option value="accessory">Accessory</option>
            </select>

            <button onclick="recommendSize()" class="w-full bg-blue-600 text-white p-2 rounded-lg">
                Recommend Size & Style
            </button>
            
            <p id="sizeRecommendation" class="mt-4 text-lg font-semibold text-green-600"></p>
            <p id="personalizedAdvice" class="mt-2 text-base font-medium text-blue-500"></p>
        </div>

        <h3 class="text-xl font-bold mt-8">Size Chart</h3>
        <img src="https://via.placeholder.com/400x300?text=Sample+Size+Chart" alt="Sample Size Chart" class="my-4">
        <p class="text-gray-600">Use this chart as a reference to match your measurements with international standard sizes.</p>
    `;

    window.recommendSize = function() {
        const height = parseInt(document.getElementById('height').value);
        const weight = parseInt(document.getElementById('weight').value);
        const bust = parseInt(document.getElementById('bust').value);
        const waist = parseInt(document.getElementById('waist').value);
        const hips = parseInt(document.getElementById('hips').value);
        const age = parseInt(document.getElementById('age').value);
        const gender = document.getElementById('gender').value;
        const bodyShape = document.getElementById('bodyShape').value;
        const productType = document.getElementById('productType').value;
        
        let size = 'M';
        if (height + weight + bust + waist + hips > 400 || bodyShape === 'athletic') {
            size = 'L';
        } else if (height + weight + bust + waist + hips < 300 || bodyShape === 'petite') {
            size = 'S';
        }
        if (age > 50 && productType === 'coat') {
            size = 'XL';
        }
        
        document.getElementById('sizeRecommendation').innerText = `Recommended Size: ${size} (EU Standard)`;
        document.getElementById('personalizedAdvice').innerText = 
            `For your style (${gender}), we recommend cuts that accentuate your ${bodyShape} body shape.`;
    }
});
</script>

<style>
    #gentevra-size-assistant input, #gentevra-size-assistant select {
        margin-bottom: 10px;
        width: 100%;
    }
</style>
